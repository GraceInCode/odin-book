<!DOCTYPE html>
<html>
<head>
    <title>Odin-Book</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <nav class="nav-bar">
        <div class="nav-content">
            <h1>Odin-Book</h1>
            <% if (user) { %>
            <div class="nav-links">
                <a href="/">Home</a>
                <a href="/posts">Feed</a>
                <a href="/users">Users</a>
                <a href="/users/<%= user.id %>">My Profile</a>
                <a href="/follows/requests">Requests</a>
                <form method="POST" action="/auth/logout">
                    <button type="submit">Logout</button>
                </form>
            </div>
            <% } else { %>
            <div class="nav-links">
                <a href="/auth/login">Login</a>
                <a href="/auth/register">Register</a>
            </div>
            <% } %>
        </div>
    </nav>

    <div class="container">
        <% if (user) { %>
            <div class="create-post">
                <h2>What's on your mind, <%= user.username %>?</h2>
                <form method="POST" action="/posts" enctype="multipart/form-data">
                    <textarea name="content" placeholder="Share something..." required></textarea>
                    <div class="file-input-wrapper">
                        <input type="file" name="image" accept="image/*" id="post-image">
                        <label for="post-image" class="file-input-label">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            Add Photo
                        </label>
                        <span class="file-name" id="file-name"></span>
                    </div>
                    <button type="submit">Post</button>
                </form>
            </div>
            <script>
                document.getElementById('post-image').addEventListener('change', function(e) {
                    const fileName = e.target.files[0]?.name || '';
                    document.getElementById('file-name').textContent = fileName;
                });
            </script>
        <% } else { %>
            <div class="empty-state">
                <h1>Welcome to Odin-Book</h1>
                <p>Connect with friends and share your moments</p>
                <p style="margin-top: 20px;">
                    <a href="/auth/login">Login</a> or <a href="/auth/register">Register</a> to get started
                </p>
            </div>
        <% } %>
    </div>
</body>
</html>